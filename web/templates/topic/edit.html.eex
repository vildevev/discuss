<!-- Phoenix knows how to access id from struct, so just pass '@topic' as the third argument -->
<%= form_for @changeset, topic_path(@conn, :update, @topic), fn f -> %>
	<div class="form-group">
		<!-- automatically prepopulates form -->
		<%= text_input f, :title, placeholder: "Title", class: "form-control" %>
		<%= error_tag f, :title %> 
	</div>

	<%= submit "Save Topic", class: "btn btn-primary" %> 
<% end %> 